{
  "openapi": "3.0.0",
  "info": {
    "title": "Trading Data API",
    "version": "1.0.0",
    "description": "REST + WebSocket API for simulated trading data"
  },
  "servers": [
    { "url": "http://localhost:4000" }
  ],
  "paths": {
    "/api/prices": {
      "get": {
        "summary": "Get a list of sample prices",
        "responses": {
          "200": {
            "description": "A list of prices"
          }
        }
      }
    },
    "/api/prices/{symbol}": {
      "get": {
        "summary": "Get current price for a symbol",
        "parameters": [
          {
            "name": "symbol",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Price object"
          }
        }
      }
    }
  }
}
